<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ixdcth.chalmers.edu.fourfun.AnswerActivity"
    android:orientation="vertical"
    android:background="@color/orange_bakgrnd">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/questionTV"
        android:layout_weight="20"
        android:textColor="@color/white"
        android:text="The dwarfs are loading the question ... Shuuut !they are lazy "
        android:textSize="@dimen/text_size"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/answer_ET"
        style="@style/edit_text_begin"
        android:hint="Your answer"
        android:textColor="@color/white"
        android:layout_weight="40"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/send"
        android:clickable="true"
        android:onClick="sendAnswer"
        android:layout_gravity="center"
        android:layout_weight="10"/>
</LinearLayout>
