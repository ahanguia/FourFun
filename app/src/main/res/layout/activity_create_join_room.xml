<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ixdcth.chalmers.edu.fourfun.CreateJoinRoomActivity"
    android:background="@color/orange_bakgrnd"
    android:orientation="vertical"
    android:weightSum="100">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:layout_gravity="center_horizontal"
        android:padding="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/roomNameET"
        android:layout_weight="5"
        android:hint="Enter Room Name"
        android:textColorHint="#ffccaa"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingBottom="20dp"
        android:gravity="center|center_horizontal"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:allowUndo="false"
        android:autoText="false"
        android:clickable="false"
        android:textIsSelectable="false" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp">

        <FrameLayout
            android:layout_width="180dp"
            android:layout_height="197dp"
            android:layout_gravity="left"
            android:paddingTop="30dp"
            android:paddingBottom="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="CREATE"
                android:id="@+id/textView"
                android:layout_gravity="bottom|center_horizontal"
                android:textColor="@color/white"
                android:autoText="false" />

            <ImageView
            android:src="@drawable/create_new"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="createRoom"
                android:layout_gravity="top|center_horizontal" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="180dp"
            android:layout_height="197dp"
            android:layout_gravity="right"
            android:paddingTop="30dp"
            android:paddingBottom="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="JOIN"
                android:id="@+id/textView2"
                android:layout_gravity="bottom|center_horizontal"
                android:textColor="@color/white"
                android:autoText="false" />

            <ImageView
                android:clickable="true"
                android:src="@drawable/join"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:onClick="joinRoom"
                android:paddingLeft="0dp"
                android:layout_gravity="center_horizontal" />
        </FrameLayout>

    </FrameLayout>

</LinearLayout>
