<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ixdcth.chalmers.edu.fourfun.CreateJoinRoomActivity"
    android:background="@color/orange_bakgrnd"
    android:orientation="vertical"
    android:weightSum="100">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/logo"
        android:layout_gravity="center_horizontal"
        android:padding="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        style="@style/edit_text_begin"
        android:hint="Enter Room Name"
        android:textColorHint="#ffffff"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:paddingBottom="20dp"
        android:gravity="center|center_horizontal" />

    <FrameLayout
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_weight="10.31"
        android:layout_gravity="top|right"
        android:padding="40dp">

        <ImageView
            android:clickable="true"
            android:src="@drawable/join"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="createRoom"
            android:paddingLeft="0dp"
            android:layout_gravity="top|center_vertical|right" />

        <ImageView
        android:src="@drawable/create_new"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="joinRoom"
        android:paddingLeft="0dp"
        android:layout_gravity="top|left|center_vertical" />

    </FrameLayout>

</LinearLayout>
